<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd
       http://www.springframework.org/schema/context
       http://www.springframework.org/schema/context/spring-context.xsd">


    <context:component-scan base-package="ua.dp.skillsup.spring.homework"/>
    <context:annotation-config/>
    <context:property-placeholder location="classpath:socialApplication.properties"/>


    <bean id="postFilter" class="ua.dp.skillsup.spring.homework.PostFilter"/>

    <bean id="facebookPostProvider" class="ua.dp.skillsup.spring.homework.PostProvider">
        <property name="serviceApi" ref="facebookApi"/>
        <property name="postFilter" ref="postFilter"/>
        <property name="keyWord" value="${postKeyWord}"/>
    </bean>
    <bean id="instagramPostProvider" class="ua.dp.skillsup.spring.homework.PostProvider">
        <property name="serviceApi" ref="instagramApi"/>
        <property name="postFilter" ref="postFilter"/>
        <property name="keyWord" value="${postKeyWord}"/>
    </bean>
    <bean id="twitterPostProvider" class="ua.dp.skillsup.spring.homework.PostProvider">
        <property name="serviceApi" ref="twitterApi"/>
        <property name="postFilter" ref="postFilter"/>
        <property name="keyWord" value="${postKeyWord}"/>
    </bean>


</beans>